style "nautilus-breadcrumbs"
{
	xthickness = 6
	ythickness = 4
	
	GtkButton::child-displacement-y	= 0
	#GtkButton::inner-border	= { 0, 11, 0, 0}

	engine "pixmap"
	{	
		image
		{
			function        	= BOX
			shadow			= OUT
			recolorable     	= TRUE
			state			= PRELIGHT
			file			= "/Buttons/breadcrumb-hover.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		}		

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			shadow			= IN
			state			= PRELIGHT
			file			= "/Buttons/breadcrumb-hover.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		}		
	  
		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state			= NORMAL
			file			= "/Buttons/breadcrumb-normal.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		}
		
		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state			= ACTIVE
			file			= "/Buttons/breadcrumb-push.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		}

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state			= PRELIGHT
			file			= "/Buttons/breadcrumb-hover.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		}

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state			= INSENSITIVE
			file			= "/Buttons/breadcrumb-normal.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		} 

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state			= SELECTED
			file			= "/Buttons/breadcrumb-push.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		}

		image
		{
			function        	= FOCUS
			recolorable     	= TRUE			
			file			= "/Nautilus/slider_focus.png"
			border			= { 9,9,12,13 }
			stretch         	= TRUE
		}
	}
}

