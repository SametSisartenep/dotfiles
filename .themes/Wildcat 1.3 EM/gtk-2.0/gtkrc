		image
		{
			function 	= FLAT_BOX
			recolorable 	= TRUE
			file 		= "Check-Radio/highlight.png"
			border 		= { 1, 3, 1, 3 }
			stretch 	= TRUE
	    	}

		image
		{
			function		= FOCUS
    			file		     	= "Combobox/line.png"
     			border			= { 9,9,12,13 }
			stretch			= TRUE
    		}
	}
}

