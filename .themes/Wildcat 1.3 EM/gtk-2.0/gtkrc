style "theme-button" = "theme-default"
{
# This was to make buttons glow when active, but there was bugs with some buttons <when removing files from
# trash for example>.
# You can try it out, because effect look cool, but those damn bugs...
# If you want to try it, just uncomment lines below, and change "button-glow4.png" to "button-glow2.png"

	GtkButton::interior_focus = 0

	GtkWidget::focus_padding = 0
	GtkButton::focus-line-width = 0
	#GtkButton::displace_focus = 9

	# Use to show glow around default buttons
	#GtkButton::default-border = { 0, 0, 0, 0}
	#GtkButton::default-outside-border = { 3, 3, 3, 3}

	#font_name = "Sans"

	xthickness = 5
  	ythickness = 5

    	engine "pixmap"
    	{
		image
		{
			function	= BOX
			state		= PRELIGHT
			recolorable	= TRUE
			file		= "Buttons/button-hover.png"
			border		= { 9,9,12,13 }
			stretch		= TRUE
		}

		image
		{
			function	= BOX
			state		= ACTIVE
			file		= "Buttons/button-push.png"
			border		= { 9,9,12,13 }
			stretch		= TRUE
		}

		image
		{
			function	= BOX
			state		= INSENSITIVE
			file		= "Buttons/button-ins.png"
			border		= { 9,9,12,13 }
			stretch		= TRUE
		}

		image
		{
			function	= BOX
			state		= SELECTED
			file		= "Buttons/button-normal.png"
			border		= { 9,9,12,13 }
			stretch		= TRUE
		}

	# Button (normal)
		image
		{
	    		function	= BOX
			state 		= NORMAL
			shadow		= OUT
	    		file		= "Buttons/button-normal.png"
	    		border		= { 9,9,12,13 }
	    		stretch		= TRUE
		}

	#Used for default buttons glow
		image
		{
			function		= BOX
			state			= NORMAL
			#shadow			= IN
			file			= "Buttons/button-glow4.png"
			border			= { 9,9,12,13 }
			stretch			= TRUE
		}

		image
		{
			function		= FOCUS
			recolorable		= TRUE
    			file		     	= "Buttons/button-normal-foc4.png"
     			border			= { 10,10,13,14 }
			stretch			= TRUE
    		}
    	}
}

