style "empathy-combo" = "theme-button2"
{
# Dolsilwa: here is funny widget. It controls combo in emptahy, without it this widget looks crappy (first entry then combobox).

	xthickness = 4
	ythickness = 3

	bg[NORMAL] 		= shade (0.93, @bg_color)
	bg[PRELIGHT]		= mix (0.6, shade (1.09, @bg_color), @selected_bg_color)

  	engine "murrine"
  	{
		gradient_shades = {1.24, 1.0, 1.0, 0.78}
        	contrast = 1.85
		roundness = 3
	}
}

