style "treeview_header" = "theme-wide"
{
# Dolsilwa: This is for header in listview/treeview. It looks a bit aqua-ish which is good.

 	bg[NORMAL]        	= shade (1.03, @bg_color)

	xthickness = 2
	ythickness = 2

	engine "murrine" {
		#contrast = .76
		highlight_shade 	= 1.1 # set the amount of buttons or widgets hilight
		glowstyle           	= 1    # 0 = top, 1 = bottom, 2 = top and bottom, 3 = center (vertical), 4 = center (horizontal)
		glow_shade 		= 1.6 # sets glow amount for buttons or widgets
		glazestyle 	= 0 # 0 = flat highlight, 1 = curved highlight, 2 = concave style, 3 = top curved hilight, 4 = beryl highlight
		gradient_shades		= {1.01,0.88,0.88,1.01} # { 1.1, 1.02, 0.97, 0.93 }
		lightborder_shade = 1.0
		textstyle = 1
	}
}

