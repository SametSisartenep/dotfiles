# menu item
style "theme-menu-item" = "theme-wider"
{
# Dolsilwa: this widget controls blue bar in menu. I think gradient could be better.

  	xthickness = 4

	bg[NORMAL] 	 	= shade (1.5, @bg_color)
  	fg[PRELIGHT] 	 	= @selected_fg_color
  	text[PRELIGHT] 		= @selected_fg_color

	engine "murrine"
	{
		arrowstyle              = 1
		border_shades		    = { 1.3, 1.0 }
		glazestyle              = 0
		gradient_shades         = {1.15,1.03,1.02,0.9}
		glowstyle               = 0
		glow_shade 		= 1.0
		highlight_shade         = 1.0		# set highlight amount for buttons or widgets
		lightborder_shade       = 1.3		# sets lightborder amount for buttons or widgets
		lightborderstyle        = 0		# 0 = lightborder on top side, 1 = lightborder on all sides
		menuitemstyle           = 1		# 0 = flat, 1 = glassy, 2 = striped
		reliefstyle             = 3		# 0 = flat, 1 = inset, 2 = shadow, 3 = shadow with gradient, 4 = stronger shadow with gradient
		rgba                    = FALSE		# Alpha transparency
		roundness               = 0		# 0 = square
	}

}

