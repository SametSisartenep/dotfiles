<?xml version="1.0"?>

<metacity_theme>
<info>
   <name>StormDrops</name>
   <author>Cylgom</author>
   <copyright>Cylgom, 2014</copyright>
   <date>December 6, 2014</date>
   <description>StormDrops - designed to be modern, fancy and ergonomic</description>
</info>

<!-- General window layout -->
<frame_geometry name="frame_geometry_normal" title_scale="medium" rounded_top_left="true" rounded_top_right="true"  rounded_bottom_left="true" rounded_bottom_right="true">
 	<distance name="left_width" value="5"/>
	<distance name="right_width" value="5"/>
	<distance name="bottom_height" value="5"/>
	<distance name="left_titlebar_edge" value="5"/>
	<distance name="right_titlebar_edge" value="5"/>
	<distance name="button_width" value="31"/>
	<distance name="button_height" value="22"/>
	<distance name="title_vertical_pad" value="0"/>
	<border name="title_border" left="2" right="2" top="0" bottom="0"/>
	<border name="button_border" left="1" right="0" top="0" bottom="2"/>
</frame_geometry>

<frame_geometry name="frame_geometry_abnormal" title_scale="medium" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false">
  	<distance name="left_width" value="5"/>
  	<distance name="right_width" value="5"/>
  	<distance name="bottom_height" value="5"/>
  	<distance name="left_titlebar_edge" value="5"/>
  	<distance name="right_titlebar_edge" value="5"/>
  	<distance name="button_width" value="31"/>
 	<distance name="button_height" value="22"/>
  	<distance name="title_vertical_pad" value="0"/>
  	<border name="title_border" left="2" right="2" top="0" bottom="0"/>
	<border name="button_border" left="1" right="0" top="0" bottom="2"/>
</frame_geometry>

<frame_geometry name="geometry_maximized" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false">
	<distance name="left_width" value="0"/>
	<distance name="right_width" value="0"/>
	<distance name="bottom_height" value="0"/>
	<distance name="left_titlebar_edge" value="0"/>
  	<distance name="right_titlebar_edge" value="0"/>
  	<distance name="button_width" value="31"/>
  	<distance name="button_height" value="22"/>
  	<distance name="title_vertical_pad" value="0"/>
  	<border name="title_border" left="2" right="2" top="0" bottom="0"/>
 	<border name="button_border" left="1" right="0" top="0" bottom="2"/>
</frame_geometry>

<frame_geometry name="border" has_title="false">
  	<distance name="left_width" value="5"/>
  	<distance name="right_width" value="5"/>
  	<distance name="bottom_height" value="5"/>
  	<distance name="left_titlebar_edge" value="5"/>
  	<distance name="right_titlebar_edge" value="5"/>
  	<distance name="button_width" value="0"/>
  	<distance name="button_height" value="0"/>
  	<distance name="title_vertical_pad" value="0"/>
  	<border name="title_border" left="0" right="0" top="0" bottom="0"/>
  	<border name="button_border" left="1" right="0" top="0" bottom="0"/>
</frame_geometry>

<!-------------->
<!-- Titlebar -->
<!-------------->

<draw_ops name="draw_title_text_normal">
	<title color="#ffffff" x="5 `max` (width-title_width)/2" y="0 `max` ((height-title_height)/2)"/>
</draw_ops>

<draw_ops name="draw_title_text_inactive">
	<title color="#dcdcdc" x="3 `max` (width-title_width)/2" y="0 `max` ((height-title_height)/2)"/>
</draw_ops>

<draw_ops name="draw_title">
	<line color="#535353" x1="3" y1="0" x2="width-4" y2="0"/>
	<rectangle color="#535353" filled="true" x="1" y="1" width="width-2" height="2"/>
	<rectangle color="#535353" filled="true" x="0" y="3" width="width" height="22"/>
</draw_ops>

<draw_ops name="draw_title_unfocused">
	<line color="#808080" x1="3" y1="0" x2="width-4" y2="0"/>
	<rectangle color="#808080" filled="true" x="1" y="1" width="width-2" height="2"/>
	<rectangle color="#808080" filled="true" x="0" y="3" width="width" height="22"/>
</draw_ops>

<draw_ops name="draw_title_maximized">
	<rectangle color="#535353" filled="true" x="0" y="0" width="width" height="25"/>
</draw_ops>

<draw_ops name="draw_title_maximized_unfocused">
	<rectangle color="#808080" filled="true" x="0" y="0" width="width" height="25"/>
</draw_ops>

<draw_ops name="draw_title_inactive">
	<include name="draw_title_unfocused" />
</draw_ops>

<draw_ops name="draw_title_maximized_inactive">
	<include name="draw_title_maximized_unfocused" />
</draw_ops>

<!--------------------->
<!-- regular borders -->
<!--------------------->
<draw_ops name="bottom_edge">
	<rectangle color="#535353" filled="true" x="0" y="0" width="width" height="2"/>
	<rectangle color="#535353" filled="true" x="1" y="2" width="width-2" height="2"/>
	<line color="#535353" x1="3" y1="4" x2="width-4" y2="4"/>
</draw_ops>

<draw_ops name="left_edge">
	<rectangle color="#535353" filled="true" x="0" y="0" width="5" height="height"/>
</draw_ops>

<draw_ops name="right_edge">
	<rectangle color="#535353" filled="true" x="0" y="0" width="5" height="height"/>
</draw_ops>

<!---------------------->
<!-- inactive borders -->
<!---------------------->

<draw_ops name="bottom_edge_unfocused">
	<rectangle color="#808080" filled="true" x="0" y="0" width="width" height="2"/>
	<rectangle color="#808080" filled="true" x="1" y="2" width="width-2" height="2"/>
	<line color="#808080" x1="3" y1="4" x2="width-4" y2="4"/>
</draw_ops>

<draw_ops name="left_edge_unfocused">
	<rectangle color="#808080" filled="true" x="0" y="0" width="5" height="height"/>
</draw_ops>

<draw_ops name="right_edge_unfocused">
	<rectangle color="#808080" filled="true" x="0" y="0" width="5" height="height"/>
</draw_ops>

<!------------->
<!-- buttons -->
<!------------->
<draw_ops name="minimize_focused_normal">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="minimize_focused_normal.png" x="0" y="0" width="31" height="20"/>
</draw_ops>
<draw_ops name="minimize_focused_pressed">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="minimize_focused_pressed.png" x="0" y="0" width="31" height="20"/>
</draw_ops>

<draw_ops name="minimize_unfocused_normal">
	<image filename="button_unfocused.png" x="0" y="0" width="31" height="20"/>
	<image filename="minimize_unfocused.png" x="0" y="0" width="31" height="20"/>
</draw_ops>
<draw_ops name="minimize_unfocused_pressed">
	<image filename="button_unfocused.png" x="0" y="0" width="31" height="20"/>
	<image filename="minimize_focused_pressed.png" x="0" y="0" width="31" height="20"/>
</draw_ops>

<draw_ops name="maximize_focused_normal">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="maximize_focused_normal.png" x="0" y="0" width="31" height="20"/>
</draw_ops>
<draw_ops name="maximize_focused_pressed">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="maximize_focused_pressed.png" x="0" y="0" width="31" height="20"/>
</draw_ops>

<draw_ops name="maximize_unfocused_normal">
	<image filename="button_unfocused.png" x="0" y="0" width="31" height="20"/>
	<image filename="maximize_unfocused.png" x="0" y="0" width="31" height="20"/>
</draw_ops>
<draw_ops name="maximize_unfocused_pressed">
	<image filename="button_unfocused.png" x="0" y="0" width="31" height="20"/>
	<image filename="maximize_focused_pressed.png" x="0" y="0" width="31" height="20"/>
</draw_ops>

<draw_ops name="unmaximize_focused_normal">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="unmaximize_focused_normal.png" x="0" y="0" width="31" height="20"/>
</draw_ops>
<draw_ops name="unmaximize_focused_pressed">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="unmaximize_focused_pressed.png" x="0" y="0" width="31" height="20"/>
</draw_ops>

<draw_ops name="unmaximize_unfocused_normal">
	<image filename="button_unfocused.png" x="0" y="0" width="31" height="20"/>
	<image filename="unmaximize_unfocused.png" x="0" y="0" width="31" height="20"/>
</draw_ops>
<draw_ops name="unmaximize_unfocused_pressed">
	<image filename="button_unfocused.png" x="0" y="0" width="31" height="20"/>
	<image filename="unmaximize_focused_pressed.png" x="0" y="0" width="31" height="20"/>
</draw_ops>

<draw_ops name="close_focused_normal">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="close_focused_normal.png" x="0" y="0" width="31" height="20"/>
</draw_ops>
<draw_ops name="close_focused_pressed">
	<image filename="button_normal.png" x="0" y="0" width="31" height="20"/>
	<image filename="close_focused_pressed.png" x="0" y="0" width="31" height="20"/>
</draw_ops>

<draw_ops name="close_unfocused_normal">
	<image filename="button_unfocused.png" x="0" y="0" width="31" height="20"/>
	<image filename="close_unfocused.png" x="0" y="0" width="31" height="20"/>
