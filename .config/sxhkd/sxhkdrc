#shift + super + Return
#	st -f Go\ Mono:size=10

# (in|de)crease volume
XF86Audio{Raise,Lower}Volume
	amixer set Master 1%{+,-}

# toggle mute
XF86AudioMute
	amixer set Master toggle

# increase brightness
XF86MonBrightness{Up,Down}
	xbacklight -{in,de}c 2

# Power Control Menu
ctrl + alt + p
	9menu -teleport -popup -label Power\ Control Shutdown:doas\ poweroff Reboot:doas\ reboot Suspend:doas\ zzz exit

# GIMP
ctrl + alt + g
	firejail gimp

# Firefox
ctrl + alt + f
	firejail firefox

# Tor Browser
ctrl + alt + o
	firejail --profile=~/.config/firejail/torbrowser.profile tor-browser-en

# KeePassX2
ctrl + alt + k
	keepassx2

# Terminal
ctrl + alt + t
	st -f Inconsolata:size=12.5

# Transmission
ctrl + alt + b
	firejail transmission-gtk

Print
	escrotum ~/Pictures/screenshots/Screenshot\ from\ %Y-%m-%d\ %H-%M-%S.png

shift + Print
	escrotum -s ~/Pictures/screenshots/Screenshot\ from\ %Y-%m-%d\ %H-%M-%S.png
